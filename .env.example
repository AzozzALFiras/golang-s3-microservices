# Copy this file to .env and fill in real values. Do NOT commit real secrets to git.

# AWS Configuration
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY_ID
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_ACCESS_KEY
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=your-bucket-name
# Set to true when using a local S3-compatible endpoint (minio, localstack)
AWS_USE_PATH_STYLE_ENDPOINT=false

# JWT / security
# Use a long, random secret (32+ bytes)
JWT_SECRET=replace_with_a_random_32_byte_secret
JWT_EXPIRATION=24h

# App and storage service settings
APP_PORT=8080
# When running with docker-compose this is: http://storage-service:8081
STORAGE_SERVICE_URL=http://storage-service:8081

# Optional: enable test mode to bypass JWT validation locally
# Set to "true" only for local testing
TEST_MODE=false
